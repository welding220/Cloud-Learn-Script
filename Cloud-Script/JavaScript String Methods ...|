<script>
var str17 = "Hello";
var arr17 = str17.split("");
var text17 = "";
var i17;
for (i17 = 0; i17 < arr17.length; i17++) {
    text17 += arr17[i17] + "<br>"
}
document.getElementById("demo17").innerHTML = text17;
</script>


