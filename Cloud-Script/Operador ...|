var y = "5" + 5;
var z = "Hello" + 5;
document.getElementById("demo")
    .innerHTML =x + "<br>" + y + "<br>" + z;
      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
      &lt;/script></pre>
