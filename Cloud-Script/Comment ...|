      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
&lt;p id="demo4">&lt;/p>
&lt;p>&lt;strong>Note:&lt;/strong> The comments are not executed.&lt;/p>
      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
      &lt;/body></pre>
      <!-- ------ end html -------- -->
      <hr>
      <!-- ------ begin -------- -->
      <h3>JS</h3>
      <!-- ------ start js -------- -->
      <pre id='gray'>&lt;script>
      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
var x4 = 5;      // Declare x, give it the value of 5
var y4 = x4 + 2;  // Declare y, give it the value of x + 2 

document.getElementById("demo4").innerHTML = y4; // Write y to demo

      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
      &lt;/script></pre>
    </div>
