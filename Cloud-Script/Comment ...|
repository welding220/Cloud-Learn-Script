<div id='cont'>
  <div id='head'>
    <h1> Comment Declared Within Variable   </h1>
  </div>
</div>
<div id='rot'>
  <article>
    <h2>Resultado</h2>
    <div>
      <h3>Ejemplo</h3>
      <!-- ------ start text ------ -->
      <div id='very'>
        <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
<p id="demo4"></p>

<script>
var x4 = 5;      // Declare x, give it the value of 5
var y4 = x4 + 2;  // Declare y, give it the value of x + 2 

document.getElementById("demo4").innerHTML = y4; // Write y to demo
</script>

<p><strong>Note:</strong> The comments are not executed.</p>

        <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
        <!-- ------ end text -------- -->
      </div>
    </div>
  </article>
  <article>
    <h2>Codigo</h2>
    <div>
      <h3>HTML</h3>
      <!-- ------ start text ------ -->
