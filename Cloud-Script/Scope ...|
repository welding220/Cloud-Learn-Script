  <div id='head'>
    <h1>   automatically become a GLOBAL variable  </h1>
  </div>
</div>
<div id='rot'>
  <article>
    <h2>Resultado</h2>
    <div>
      <h3>Ejemplo</h3>
      <!-- ------ start text ------ -->
      <div id='very'>
        <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
<p>
If you assign a value to a variable that has not been declared,
it will automatically become a GLOBAL variable:
</p>

<p id="demo2"></p>

<script>
myFunction2();

// code here can use carName as a global variable
document.getElementById("demo2").innerHTML = "I can display " + carName2;

function myFunction2() {
    carName2 = "Volvo";
}
</script>

        <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
        <!-- ------ end text -------- -->
      </div>
    </div>
  </article>
  <article>
    <h2>Codigo</h2>
    <div>
      <h3>HTML</h3>
      <!-- ------ start text ------ -->
      <pre id='gray'>&lt;body>
      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
&lt;h3> 
If you assign a value to a variable that has not been declared,
it will automatically become a GLOBAL variable:
&lt;/h3>

&lt;p id="demo">&lt;/p>

      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
      &lt;/body></pre>
      <!-- ------ end html -------- -->
      <hr>
      <!-- ------ begin -------- -->
      <h3>JS</h3>
      <!-- ------ start js -------- -->
      <pre id='gray'>&lt;script>
      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
myFunction();

// code here can use carName as a global variable
    document.getElementById("demo").innerHTML = "I can display " + carName;

function myFunction() {    carName = "Volvo"; }
      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
      &lt;/script></pre>
    </div>
