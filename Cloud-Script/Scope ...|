<div id='cont'>
  <div id='head'>
    <h1>   global variables become window variables   </h1>
  </div>
</div>
<div id='rot'>
  <article>
    <h2>Resultado</h2>
    <div>
      <h3>Ejemplo</h3>
      <!-- ------ start text ------ -->
      <div id='very'>
        <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
<p>
In HTML, all global variables will become window variables.
</p>

<p id="demo3"></p>

<script>
var carName3 = "Volvo";

// code here can use window.carName
document.getElementById("demo3").innerHTML = "I can display " + window.carName3;
</script>

        <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
        <!-- ------ end text -------- -->
      </div>
    </div>
  </article>
  <article>
    <h2>Codigo</h2>
    <div>
      <h3>HTML</h3>
      <!-- ------ start text ------ -->
      <pre id='gray'>&lt;body>
      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
&lt;h3> 
In HTML, all global variables will become window variables.
&lt;/h3>

&lt;p id="demo">&lt;/p>

      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
      &lt;/body></pre>
      <!-- ------ end html -------- -->
      <hr>
      <!-- ------ begin -------- -->
      <h3>JS</h3>
      <!-- ------ start js -------- -->
      <pre id='gray'>&lt;script>
      <!-- :::::::::::::::::::::::::::::::::::::::::::::: -->
var carName = "Volvo";

// code here can use window.carName
